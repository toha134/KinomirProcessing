    <servlet-mapping>
        <servlet-name>RegisterPaymentAttempt</servlet-name>
        <url-pattern>/processing/RegisterPaymentAttempt.jsp</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Entire Application</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
